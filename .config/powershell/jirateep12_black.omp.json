{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#b58900",
          "foreground": "#1c1c1c",
          "properties": {
            "threshold": 500,
            "style": "round",
            "always_enabled": true
          },
          "leading_diamond": "\ue0b6",
          "powerline_symbol": "\ue0b0",
          "style": "diamond",
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime"
        },
        {
          "background": "#1c1c1c",
          "foreground": "#87d7ff",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 3,
            "folder_separator_icon": "\\",
            "folder_icon": "~"
          },
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#5faf00",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#d7af00{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#d75f00{{ end }}",
            "{{ if gt .Ahead 0 }}#5f87d7{{ end }}",
            "{{ if gt .Behind 0 }}#d75f87{{ end }}"
          ],
          "foreground": "#1c1c1c",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\uf09b ",
            "gitlab_icon": "\uf296 ",
            "bitbucket_icon": "\uf171 "
          },
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#5f8700",
          "foreground": "#1c1c1c",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "background": "#3776ab",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "trailing_diamond": "\ue0b4",
          "style": "diamond",
          "template": " \ue235 {{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }} ",
          "type": "python"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#1c1c1c",
          "foreground": "#87afaf",
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b4",
          "style": "diamond",
          "template": " {{ .CurrentDate | date .Format }} ",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#5fd700",
          "foreground_templates": ["{{ if gt .Code 0 }}#ff5f5f{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "‚ùØ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "version": 2
}
